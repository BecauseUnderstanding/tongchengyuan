<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/window_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/comm_toolbar" />


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_usersafe"
                style="@style/TxtTitle"
                android:layout_marginTop="20dp"
                android:drawableRight="@drawable/right"
                android:text="账号安全" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:divider="@drawable/divider_common"
                android:orientation="vertical"
                android:showDividers="middle"     android:dividerPadding="@dimen/activity_horizontal_margin"
                >

                <TextView
                    android:id="@+id/txt_msgtip"
                    style="@style/TxtTitle"
                    android:drawableRight="@drawable/right"
                    android:text="新消息通知" />

                <TextView
                    android:id="@+id/txt_yinsi"
                    style="@style/TxtTitle"
                    android:drawableRight="@drawable/right"
                    android:text="隐私" />

                <TextView
                    android:id="@+id/txt_tongyong"
                    style="@style/TxtTitle"
                    android:drawableRight="@drawable/right"
                    android:text="通用" />
            </LinearLayout>

            <TextView
                android:id="@+id/txt_about"
                style="@style/TxtTitle"
                android:layout_marginTop="20dp"
                android:drawableRight="@drawable/right"
                android:text="关于微信" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="80.0dip"
                android:gravity="center"
                android:padding="20.0dip">

                <Button
                    android:id="@+id/btnexit"
                    android:layout_width="fill_parent"
                    android:layout_height="50.0dip"
                    android:background="@drawable/btn_bg_red2"
                    android:text="退出登录"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>