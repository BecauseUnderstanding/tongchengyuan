<?xml version="1" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/black"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_title"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="@color/black"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_recorder_cancel"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:gravity="center"
            android:padding="10dp"
            android:text="取消"
            android:textColor="#FF00FF00"
            android:textSize="16sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_recoder_surfaceview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_title"
        android:background="@color/black">

        <ImageView
            android:id="@+id/img_record_focusing"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:scaleType="fitXY"
            android:visibility="gone" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_bottom_recoder"
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:layout_alignParentBottom="true"
        android:visibility="visible">


        <TextView

            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_recoder_tips"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:background="#33000000"
            android:padding="5dp"
            android:text="松开取消"
            android:textColor="@color/red"
            android:textSize="14dp"
            android:visibility="invisible" />

        <TextView

            android:id="@+id/tv_recoder_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:background="#33000000"
            android:padding="5dp"
            android:text="↑ 上移取消"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:visibility="invisible" />

        <com.juns.wechat.chat.offlineVideo.widget.RecorderProgress
            android:id="@+id/recorder_progress"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/tv_recoder_tips"
            android:layout_marginTop="10dp"
            android:visibility="visible" />

        <RelativeLayout
            android:id="@+id/rl_recorder_bottom"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/recorder_progress"
            android:background="@color/black"
            android:paddingBottom="40dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/btn_press"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bg_record_press"
                android:clickable="true"
                android:gravity="center"
                android:text="按住拍"
                android:textColor="#FF00FF00"
                android:textSize="20dp" />

            <SurfaceView
                android:id="@+id/surfaceView"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>